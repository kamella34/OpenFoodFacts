<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="openfoodfacts" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/OpenFoodFacts"/>
      <property name="javax.persistence.jdbc.user" value="root" />
      <property name="javax.persistence.jdbc.password" value="" />
      <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver" />
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.dialect"
                value="org.hibernate.dialect.MySQL8Dialect" />
    </properties>
  </persistence-unit>

  <persistence-unit name="openfoodfactsdev" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>fr.digi.off.Additif</class>
    <class>fr.digi.off.Allergene</class>
    <class>fr.digi.off.Categorie</class>
    <class>fr.digi.off.Marque</class>
    <class>fr.digi.off.NutriScore</class>
    <class>fr.digi.off.Ingredient</class>
    <class>fr.digi.off.Produit</class>
    <properties>
      <!-- desactiver l'autodetection des classes de type @Entity -->
      <property name="hibernate.archive.autodetection" value="" />
      <!-- Drop and create à chaque redémarrage -->
      <property name="jakarta.persistence.schema-generation.database.action"
                value="drop-and-create"/>
      <!-- Affichage des requêtes SQL -->
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.dialect"
                value="org.hibernate.dialect.MySQL8Dialect" />
      <!-- Paramètres d'accès à la BDD -->
      <property name="javax.persistence.jdbc.url"
                value="jdbc:mariadb://localhost:3306/OpenFoodFacts" />
      <property name="javax.persistence.jdbc.user" value="root" />
      <property name="javax.persistence.jdbc.password" value="" />
      <property name="javax.persistence.jdbc.driver"
                value="org.mariadb.jdbc.Driver" />
    </properties>
  </persistence-unit>
</persistence>
